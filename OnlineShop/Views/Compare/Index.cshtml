@model List<Product>;

@if (Model.Count() == 0)
{
    <div class="text-center">
        <h3 class="bg-warning-subtle text-emphasis-warning">В списке сравнения еще нет товаров</h3>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Перейти к покупкам</a>
    </div>
}
else
{
    <h4>Сравнение</h4>
    <div class="row">
        <div class="col">
            <table class="table" style="font-size:15px">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Операционная система</th>
                        <th>Тип процессора</th>
                        <th>Объем памяти</th>
                        <th>Основная камера</th>
                        <th>Цена</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td class="col-4"><a style="color:navy" asp-controller="product" asp-action="index" asp-route-id="@product.Id"><p>@product.Name</p></a></td>
                            <td>@product.OperatingSystem</td>
                            <td>@product.ProcessorType</td>
                            <td>@product.Memory</td>
                            <td>@product.Camera</td>
                            <td class="col-3">@string.Format("{0:### ### ###}", product.Cost) р</td>
                            <td class="col-3 text-end">
                                <a class="btn btn-outline-warning" title="Удалить из списка" asp-controller="Compare" asp-action="Del" asp-route-id="@product.Id"><i class="bi bi-trash-fill"></i></a>
                                <a class="btn btn-outline-warning" title="Добавить в корзину" asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id"><i class="bi bi-cart"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center">
                <a class="btn btn-primary" title="Не еби голову!!!" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-90deg-left">Продолжить покупки</i></a>
                <a class="btn btn-outline-primary" asp-controller="Compare" asp-action="Clear"><i class="bi bi-x-circle">Очистить список</i></a>
            </div>
        </div>
    </div>
}