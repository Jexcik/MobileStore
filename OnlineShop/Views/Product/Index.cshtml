@model Product

<div class="row">
    <div class="col-3">
        <img class="card-img-top" src=@Model.ImagePath />
    </div>
    <div class="col-9">
        <h5>@Model.Name</h5>
        <h5>@Model.Cost</h5>
        <h1>@Model.Description</h1>

        <a class="btn btn-outline-success" href="/home/index" role="button">Продолжить покупки</a>
        <a class="btn btn-outline-success" href="/cart/add?productId=@Model.Id" role="button">Добавить в корзину</a>
    </div>
</div>