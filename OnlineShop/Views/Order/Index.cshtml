@model Cart
<div class="row">
    @*форма заказа*@
    <div class="col-5 card shadow-lg">
        <h4>Ваш заказ</h4>
        <table class="table" style="font-size:12px">
            <thead>
                <tr>
                    <th style="font-size:12px">Название</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th>Стоимость</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Cost руб.</td>
                        <td>@item.Amount</td>
                        <td>@item.Cost руб.</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-end">
            <h6>Итого: @Model.Cost руб.</h6>
        </div>
    </div>
    <div class="col-1"></div>

    <div class="col-6 card shadow-lg">

        @*Контейнер куда мы складываем все элементы управления, значения которых мы хотим отправить на сервер*@
        <form method="post"> 
            <div class="form-group" style="margin:10px">
                <label for="exampleFormControlInput1">ФИО</label>
                <input type="text" class="form-control" id="name" placeholder="" name="name" />
            </div>
            <div class="form-group" style="margin:10px">
                <label for="exampleFormControlInput2">Email</label>
                <input type="text" class="form-control" id="email" placeholder="" name="email" />
            </div>
            <div class="form-group" style="margin:10px">
                <label for="exampleFormControlInput3">Телефон</label>
                <input type="text" class="form-control" id="phone" placeholder="" name="phone" />
            </div>
            <div class="form-group" style="margin:10px">
                <label for="exampleFormControlInput4">Адрес</label>
                <input type="text" class="form-control" id="address" placeholder="" name="address" />
            </div>
            <div class="form-group" style="margin:10px">
                <label for="exampleFormControlTextarea1">Комментарии к заказу</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="text-center" style="margin:30px">

                @*submit значит что при нажатии информации из элементов представление попадает в контроллер*@
                <button class="btn btn-outline-secondary btn-lg" type="submit" asp-controller="Order" asp-action="Buy">Оформить заказ</button>
            </div>
        </form>
    </div>
</div>