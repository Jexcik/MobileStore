@model List<Product>
<div class="row">
    @await Html.PartialAsync("MenuAdministrator")
    <div class="col-9">
        <div class="row">
            <h3 class="text-center">Продукты</h3>
        </div>
        <a class="btn btn-outline-primary" asp-area="" asp-controller="Administrator" asp-action="AddProduct">Добавить новый продукт</a>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Название</th>
                        <th>Цена</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Name</td>
                            <td>@Model[i].Cost</td>
                            <td></td>
                            <td>
                                <a class="btn btn-outline-primary" title="Редактировать продукт" asp-area="" asp-controller="Administrator" asp-action="EditProduct"><i class="bi bi-pen"></i></a>
                                <a class="btn btn-outline-primary" title="Удалить продукт" asp-area="" asp-controller="Administrator" asp-action="RemoveProduct"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>