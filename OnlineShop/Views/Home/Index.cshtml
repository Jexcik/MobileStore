@model List<Product>



<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3 card shadow-lg">
            <img class="card-img-top" src=@product.ImagePath alt="Изображение товара" />
            <div class="card-body">
                <a style="color:black" href="/product/index/@product.Id">
                    <h6>@product.Name</h6>
                </a>
                <h5>@product.Cost руб</h5>
                <h6>@product.Description</h6>
                <a class="btn btn-outline-success" href="/cart/add?productId=@product.Id" role="button">Добавить в корзину</a>
            </div>
        </div>
    }
</div>
