@model List<Product>



<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3 card shadow-lg">
            <img class="card-img-top" src=@product.ImagePath alt="Изображение товара" />
            <div class="card-body">
                <a style="color:navy" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id"> <h6>@product.Name"</h6></a>
                <h5>@string.Format("{0:### ### ###}", product.Cost) р</h5>

                <p style="font-size:20px">@product.Description</p>

                <a class="btn btn-outline-success" title="Подробнее о товаре" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id"><i class="bi bi-info-square"></i></a>
                <a class="btn btn-outline-success" title="Добавить в избранное" asp-controller="Favorite" asp-action="Add" asp-route-id="@product.Id"><i class="bi bi-heart"></i></a>
                <a class="btn btn-outline-success" title="Сравнить" asp-controller="Compare" asp-action="Add" asp-route-id="@product.Id"> <i class="bi bi-clipboard2-plus"></i> </a>
                <a class="btn btn-warning" asp-controller="Cart" asp-action="Add" asp-route-productid="@product.Id"> <i class="bi bi-cart"> В корзину </i> </a>
            </div>
        </div>
    }
</div>
